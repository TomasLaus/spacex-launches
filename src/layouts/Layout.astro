---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <script>
      var fi: any = document.getElementById("changingFavicon");
  
      window.onfocus = function () {
        fi.setAttribute("href", "/favicon.svg");
      };
  
      window.onblur = function () {
        fi.setAttribute("href", "/favicon-out.svg");
      };
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/svg+xml"
      id="changingFavicon"
      href={"/favicon.svg"}
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{title}</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <link
      rel="stylesheet"
      href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <!--Replace with your tailwind.css once created-->
    <link
      href="https://unpkg.com/@tailwindcss/custom-forms/dist/custom-forms.min.css"
      rel="stylesheet"
    />

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap");

      html {
        font-family:
          "Poppins",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          "Helvetica Neue",
          Arial,
          "Noto Sans",
          sans-serif,
          "Apple Color Emoji",
          "Segoe UI Emoji",
          "Segoe UI Symbol",
          "Noto Color Emoji";
      }
    </style>
    <ViewTransitions />
  </head>
  <body
    class="bg-gray-900 min-h-screen pb-32 leading-normal tracking-normal m-6 bg-cover bg-fixed"
    style="background-image: url('header.png')"
  >
    <div class="h-full">
      <div class="w-full container mx-auto">
        <Header />
        <main class="max-w-5xl px-4 m-auto">
          <slot />
        </main>
      </div>
    </div>
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
        color-scheme: dark light;
      }
      .dark {
        --color-bg: 3 7 18;
        --color-box: 17 24 39;
        --box-border: 243 244 246/0.1;
        --box-sd: transparent;

        --heading-1: 255 255 255;
        --heading-2: 243 244 246;
        --heading-3: 209 213 219;
      }

      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
